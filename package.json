{
  "name": "rytass",
  "author": "Rytass",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean && lerna clean",
    "build:clean": "lerna run build:clean --stream --parallel",
    "build": "lerna run build --stream --sort",
    "lint:ts": "eslint . --ext .ts",
    "lint": "npm run lint:ts",
    "test:clean": "rm -rf ./coverage",
    "test:coverage": "jest --coverage --maxWorkers=1",
    "test": "jest --maxWorkers=1",
    "prepare": "husky install",
    "release": "lerna version patch && npm run build && lerna publish from-package --contents lib"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/config-lerna-scopes": "^17.2.1",
    "@swc/core": "^1.3.2",
    "@types/jest": "^29.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lerna": "^5.5.1",
    "lint-staged": "^13.0.3",
    "rollup": "^2.79.0",
    "rollup-plugin-swc3": "^0.6.0",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  }
}
