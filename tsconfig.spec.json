{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["jest", "node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["**/*.spec.*", "**/__utils__/*.ts", "./packages"],
  "ts-node": {
    "esm": true
  }
}
