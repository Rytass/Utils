{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["esnext"]
  },
  "exclude": ["node_modules", "**/node_modules"]
}
