{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [],
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "parallel": 4,
        "maxParallel": 8,
        "useDaemonProcess": true,
        "runtimeCacheInputs": ["node -v"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "cache": true,
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "node ../../scripts/clean-build.cjs",
          "node ../../scripts/build.cjs --outputPath={projectRoot}/lib --main={projectRoot}/src/index.ts --tsConfig={projectRoot}/tsconfig.build.json"
        ],
        "parallel": false
      },
      "inputs": ["default"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "jest.config.js",
        "testPathPatterns": ["{projectRoot}"],
        "passWithNoTests": true,
        "codeCoverage": false
      },
      "inputs": ["testing"],
      "cache": true
    },
    "test:watch": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "jest.config.js",
        "testPathPatterns": ["{projectRoot}"],
        "passWithNoTests": true,
        "codeCoverage": false,
        "watch": true
      },
      "inputs": ["testing"],
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "cwd": "{projectRoot}"
      },
      "inputs": ["testing"],
      "cache": true
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "node ../../scripts/clean-build.cjs"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/src/**/*", "sharedGlobals"],
    "testing": [
      "{projectRoot}/__tests__/**/*.spec.ts",
      "{projectRoot}/__mocks__/**/*.mock.ts",
      "{projectRoot}/__fixtures__/**/*.ts",
      "{workspaceRoot}/jest.config.js",
      "{workspaceRoot}/jest.setup.mjs",
      "default"
    ],
    "linting": ["testing", "{workspaceRoot}/eslint.config.js"],
    "sharedGlobals": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.base.node.json",
      "{workspaceRoot}/tsconfig.base.web.json",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/lerna.json",
      "!{projectRoot}/**/dist/**",
      "!{projectRoot}/**/lib/**",
      "!{projectRoot}/**/coverage/**"
    ],
    "production": ["default"]
  },
  "tui": {
    "enabled": false
  },
  "release": {
    "changelog": {
      "projectChangelogs": true
    },
    "projectsRelationship": "independent"
  }
}
